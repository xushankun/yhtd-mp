/* 添加到我的小程序 */
.addMiniMask{

}
.addMiniMask>image{
  display: block;
  width: 70%;
  margin: 160rpx auto 60rpx;
  animation: 0.4s puffIn;
  -webkit-animation: 0.4s puffIn;
}
.addMiniMask>button{
  width: 40%;
  border: 2rpx solid #fff;
  border-radius: 50rpx;
  color: #fff;
  background: transparent;
  font-size: 28rpx;
}

/* loading */
.loadView{
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  background: rgba(255, 255, 255, 1);
}
.loadView>text{
  line-height: 10rpx;
}

.loadSamll{
  display: block;
  width:70rpx;
  height: 70rpx;
  position: fixed;
  left: 50%;
  top: 25%;
  margin-left: -35rpx;
  z-index: 10000;
}

/* 漂浮广告 */
.flotageBox{
  position: fixed;
  bottom: 20rpx;
  right: 40rpx;
  z-index: 100;
  color: #543e3e;
  animation: bounceInRight 2s;
}

.flotageImg>image{
  width: 120rpx;
}
.flotageBox>icon{
  background: #fff;
  border-radius: 100rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: -30rpx;
  right: -30rpx;
  color: #999;
  font-size: 32rpx;
}