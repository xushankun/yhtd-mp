/* miniprogram/pages/index/release/release.wxss */

page {
  background: #f1f5f9;
}

.submit-info {
  background: rgba(0, 180, 170, 1);
  color: #fff;
  position: fixed;
  width: calc(100% - 60rpx);
  bottom: 100rpx;
  left: 30rpx;
}

.upload-block {
  padding: 0 28rpx;
}

.upload-block .upload-title {
  padding: 35rpx 0;
  display: flex;
  align-items: baseline;
  color: #404040;
  font-size: 32rpx;
}

.upload-tips {
  font-size: 24rpx;
  margin-left: 4rpx;
}

.upload-list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.upload-list .upload-img {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx 20rpx 20rpx 0;
}

.upload-list .upload-btn {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx 20rpx 20rpx 0;
  background: #ebebeb;
}

.upload-list .upload-btn .plus-icon {
  width: 40rpx;
  height: 40rpx;
}

.justify-align-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-hover {
  background-color: red;
}



/* 结果列表 */
.result-list {
  margin-top: 20px;
  position: relative
}

.result-list .item-block {
  min-height: 50px;
  display: flex;
  justify-content: space-between;
  position: relative
}

.upload-img-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1
}

.top-panel {
  background: #00b4aa;
  position: relative;
  z-index: 10;
}

.top-panel.active {
  background: rgba(0, 0, 0, .5)
}

.form-block.active {
  background: rgba(0, 0, 0, .5);
  position: relative;
  z-index: 10;
  color: #fff;
}

.form-block.active .upload-title {
  color: #fff
}

.select-box {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff
}

.picker-wrap {
  width: 100%;
  height: 100%;
}
.select-box .picker {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.select-box .iconfont {
  font-size: inherit;
  margin-left: 8rpx;
  position: relative;
  top: -7rpx;
}